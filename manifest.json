{
  "manifest_version": 3,
  "name": "Scratch Cat Blocks Control",
  "version": "1.2",
  "permissions": ["storage"],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://scratch.mit.edu/projects/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://scratch.mit.edu/*"]
    }
  ]
}
